{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block Titre %}Login{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {# Les informations sont incorrectes  ---> on a parametrer le message
                par contre on peut utiliser une autre methode avec twig     
            #}

            {{error.messageKey | trans(error.messagedata,'security')}}
        </div>
        
    {% endif %}
    <form action="{{path('connexion')}}" method="post">
        <div class="form-group">
            <label>Login : </label>
            <input type="text" required name="_username" class="form-control">
        </div>
        <div class="form-group">
            <label>Password : </label>
            <input type="password" required name="_password" class="form-control">
        </div>
        <input type="submit" class="btn btn-primary" value="s'identifier">
    </form>
 
{% endblock %}