{% extends 'base.html.twig' %}

{% block title %}Aliments{% endblock %}
{% block Titre %}
    Liste de tous les aliments 
    {% if iscalorie %}
        avec moins de 50 calorie
        {% elseif isgluside %}
            avec moins de 5 glucide
    {% endif %}
{% endblock %}

{% block body %}
    <a href="{{path("aliments")}}" class="btn btn-primary">tous</a>
    <a href="{{path("alimentsParCalorie" ,{"calorie": 50})}}" class="btn btn-primary">Aliments avec moins de 50 calorie au 100g</a>
    <a href="{{path("alimentsParGlucide" ,{"glucide": 5})}}" class="btn btn-primary">Aliments avec moins de 5 glucide au 100g</a>
    <div class="row">
        {% for aliment in aliments %}
    
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 ">
                <div class="card border-primary mb-3 mx-auto" style="max-width:15rem">
                    <div class="card-header text-center">
                        <img src="{{ asset('images/aliments/' ~ aliment.image)}}" class="perso_imgAliment card-img-top">
                    </div>
                    <div class="card-body">
                        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{aliment.nom}}</h3>
                        <p class="card-text">
                            <h4 class="text-center">prix (Kilo):{{aliment.prix}}€ </h4>
                            <h4 class="text-center">Type: {{aliment.type.libelle}} </h4>
                            <table class="table text-center">
                                <tr class="table-primary">
                                    <td>Propriété</td>
                                    <td>Valeur (100g)</td>
                                </tr>
                                <tr>
                                    <td>Calorie</td>
                                    <td>{{aliment.calorie}}</td>
                                </tr>
                                <tr>
                                    <td>Proteine</td>
                                    <td>{{aliment.proteine}}</td>
                                </tr>
                                <tr>
                                    <td>Glucide</td>
                                    <td>{{aliment.glucide}}</td>
                                </tr>
                                <tr>
                                    <td>Lipide</td>
                                    <td>{{aliment.lipide}}</td>
                                </tr>
                            </table>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}  
    </div>


{% endblock %}



